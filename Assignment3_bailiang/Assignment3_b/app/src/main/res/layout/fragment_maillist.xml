<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/mltitleTextView"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Maillist" />

    <TextView
        android:id="@+id/mlNametextView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:textSize="25sp"
        android:typeface="serif"
        android:text="Name:" />

    <EditText
        android:id="@+id/mlNameEditText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/additem"
        android:ems="10"
        android:inputType="textPersonName" />

     <TextView
        android:id="@+id/mlemailTextView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
        android:textSize="25sp"
        android:typeface="serif"
        android:text="Email:" />
    
    <EditText
        android:id="@+id/mlEmailEditText"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/additem"
        android:ems="10"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/sendbutton"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/mlEmailEditText"
        android:layout_below="@+id/mlEmailEditText"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_small"
        android:text="SEND"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>
